<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ticket.demo_ticketking.mapper.UserMapper">
    <resultMap id="baseResult" type="com.ticket.demo_ticketking.po.TbUser">
        <id property="userId" column="user_id" javaType="java.lang.Long"/>
        <result property="userName" column="user_name" javaType="java.lang.String"/>
        <result property="userTel" column="user_tel" javaType="java.lang.String"/>
        <result property="userPassword" column="user_password" javaType="java.lang.String"/>
        <result property="userBalance" column="user_balance" javaType="java.lang.Long"/>
        <result property="userPs" column="user_ps" javaType="java.lang.String"/>
        <result property="userCoupon" column="user_coupon" javaType="java.lang.String"/>
        <result property="userImage" column="user_image" javaType="java.lang.String"/>
        <result property="userLv" column="user_lv" javaType="java.lang.Long"/>
    </resultMap>
        <insert id="register">
            insert into tb_user(user_tel, user_password)
            values(#{userTel},#{userPassword});
        </insert>


    <select id="checkUsername" resultMap="baseResult">
        select user_id,user_name,user_tel,user_password,user_balance,user_lv from king.tb_user where user_tel=#{userTel};
    </select>

    <select id="queryUser" resultMap="baseResult">
        select * from tb_user
    </select>

    <insert id="userss">
            insert into tb_user(user_id,user_name,user_tel,user_password,user_balance,user_ps,user_coupon,user_image,user_lv)
            values(#{userId},#{userName},#{userTel},#{userPassword},#{userBalance},#{userPs},#{userCoupon},#{userImage},#{userLv});
        </insert>

<update id="UpdateUser">
    update tb_user set user_name=#{userName},user_tel=#{userTel},user_password=#{userPassword},user_balance=#{userBalance},user_ps=#{userPs},user_coupon=#{userCoupon},user_image=#{userImage},user_lv=#{userLv}
    where user_id=#{userId};
</update>

    <select id="queryById" resultMap="baseResult">
        select user_id,user_name,user_tel,user_password,user_balance,user_ps,user_coupon,user_image,user_lv from tb_user where user_id=#{userId};
    </select>

<select id="queryUserName" resultMap="baseResult">
    select  user_id from tb_user where user_tel=#{userTel}
</select>



</mapper>
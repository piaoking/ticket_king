<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ticket.demo_ticketking.mapper.CommetMapper">

    <resultMap id="baseResult" type="com.ticket.demo_ticketking.vo.Comment">
        <id property="commentId" column="comment_id" javaType="java.lang.Integer"/>
        <result property="commentName" column="comment_name" javaType="java.lang.String"/>
        <result property="commentDetails" column="comment_details" javaType="java.lang.String"/>
        <result property="commentZan" column="comment_zan" javaType="java.lang.Integer"/>
        <result property="commentTime" column="comment_time" javaType="java.sql.Date"/>
        <result property="commentImage" column="comment_image" javaType="java.lang.String"/>
        <result property="starName" column="star_name" javaType="java.lang.String"/>
        <result property="starId" column="star_id" javaType="java.lang.Integer"/>
        <result property="starImage" column="star_image" javaType="java.lang.String"/>
        <result property="ticketName" column="ticket_name" javaType="java.lang.String"/>
        <result property="ticketImage" column="ticket_image" javaType="java.lang.String"/>
    </resultMap>

    <select id="queryComment" resultMap="baseResult">
        select c.comment_name , c.comment_details,c.comment_zan,c.comment_time,
        c.comment_image,s.star_name,s.star_id,s.star_image,t.ticket_name,t.ticket_image
        from tb_comment c join tb_ticket t
        on c.ticket_id = t.ticket_id
        join tb_star s
        on t.star_id = s.star_id ;
    </select>
</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ticket.demo_ticketking.mapper.CityMapper">

    <resultMap id="baseResult" type="com.ticket.demo_ticketking.po.TbCity">
        <id property="cityId" column="city_id" javaType="java.lang.Long"/>
        <result property="cityName" column="city_name" javaType="java.lang.String"/>
    </resultMap>

    <select id="queryCity" resultMap="baseResult">
        select city_name,city_id from tb_city;
    </select>

    <select id="queryCityById" resultMap="baseResult">
        select city_name,city_id from tb_city where city_id = #{cityId};
    </select>
</mapper>